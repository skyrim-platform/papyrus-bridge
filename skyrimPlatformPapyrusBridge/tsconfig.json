{
  "verbose": true,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "paths": { "skyrimPlatform": ["node_modules/@skyrim-platform/skyrim-platform"] },
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src/**/*.ts"]
}